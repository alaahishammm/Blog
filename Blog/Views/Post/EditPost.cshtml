@model Blog.Models.BlogPost

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4">Edit Post</h2>

        <form asp-action="EditPost" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="@Model.id" />

            <div class="mb-3">
                <label for="Pagetitle" class="form-label">Page Title</label>
                <textarea class="form-control" id="Pagetitle" name="Pagetitle" rows="1" required>@Model.Pagetitle</textarea>
            </div>

            <div class="mb-3">
                <label for="content" class="form-label">Post Content</label>
                <textarea class="form-control" id="content" name="content" rows="4" required>@Model.content</textarea>
            </div>

            <div class="mb-3">
                <label for="Auther" class="form-label">Author Name</label>
                <textarea class="form-control" id="Auther" name="Auther" rows="1">@Model.Auther</textarea>
            </div>

            <div class="mb-3">
                <label for="heading" class="form-label">Heading</label>
                <textarea class="form-control" id="heading" name="heading" rows="1">@Model.heading</textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="OrderPosts" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>